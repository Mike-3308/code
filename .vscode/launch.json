    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) 启动",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/c/debug/debug.exe",
            "args": [],
            "code-runner.executorMap": {
                //        "c":"cd $dir && gcc main.c sort/*.c linked_list/*.c -I ./../include/ -o $fileNameWithoutExt && $dir$fileNameWithoutExt",
                //        "c":"cd $dir && cd .. && make && clear && cd release && main.exe",
                 //       "c":"e: && gcc $fileNameWithoutExt.c -o $fileNameWithoutExt.exe && $fileNameWithoutExt.exe",
                        "c": "clear && cd $dir && gcc $fileNameWithoutExt.c -g -Iinclude -Wall -o $fileNameWithoutExt.exe && cp ./$fileNameWithoutExt.exe ./../debug/debug.exe &&./$fileNameWithoutExt.exe",
                        "html": "clear && cd $dir && google-chrome $fileNameWithoutExt.html",
                        "sh": "clean && cd $dir && ./$fileNameWithoutExt.sh"
                        },
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerArgs": "-q -ex quit; wait() { fg >/dev/null; }; /bin/gdb -q --interpreter=mi",
            "setupCommands": [
                {
                    "description": "为 gdb 启用整齐打印",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
            
        }
    ]
}
